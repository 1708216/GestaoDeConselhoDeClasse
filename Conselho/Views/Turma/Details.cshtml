@model Conselho.Models.Turma

@{
    ViewBag.Title = "Details";
}

<h1>Alunos Matriculados </h1>

<br />
<h2>Matricular</h2>
<br />


    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@Model.turma.Nome</h1>
            <p class="lead">
                <h3>@Model.turma.Serie</h3>
                <h3>@Model.turma.Turno</h3>
            </p>
        </div>
    </div>

    <h1>Turmas </h1>


    @foreach (var item in Model.alunosParaMatricular)
    {
         <tr>
            <th>
                Id: @item.Nome Serie:@item.Situacao &emsp; Turma:@item.CGM  &emsp;
            </th>
        </tr>
   
    }

