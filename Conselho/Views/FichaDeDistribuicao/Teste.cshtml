
@model  Conselho.Models.Professor

@{
    Layout = null;
    ViewBag.Title = "Teste";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Datalhes do Professor</h4>
        </div>
        <div class="modal-body">
            <p>@Html.DisplayNameFor(model => model.ProfessorID) : @Html.DisplayFor(model => model.ProfessorID)</p>
            <p>@Html.DisplayNameFor(model => model.Nome) : @Html.DisplayFor(model => model.ProfessorID)</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


