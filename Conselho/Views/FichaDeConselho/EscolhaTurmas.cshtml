@model IEnumerable<Conselho.Models.FichaDeDistribuicao>

@{
    ViewBag.Title = "EscolhaTurmas";
}

<style>


    .demo-card-wide > .mdl-card__menu {
        color: #fff;
    }
</style>


<br />
<br />
@foreach (var item in Model)
{
    <div class="demo-card-wide mdl-card mdl-shadow--4dp col-6 m-4">
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text font-weight-bold">TURMAS </h2>
        </div>
        <div class="mdl-card__supporting-text">
            <h3>@item.TurmaID | @item._Turma.Serie @item._Turma.Nome | @item._Turma.Turno</h3>
            <h3>@item._Disciplina.Nome</h3>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <small class="text-muted">
                @Html.ActionLink("Iniciar Conselho", "IniciaConselho", new { idTurma = item.TurmaID, idProf = item._Professor.ProfessorID, idDis = item._Disciplina.DisciplinaID }, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-button--colored btn_cadastrar" })
            </small>
        </div>
        <div class="mdl-card__menu">
            <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                <i class="material-icons">share</i>
            </button>
        </div>
    </div>
    <br />
    <br />

}







