@model Conselho.Models.Turma

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-5"> ID Turma : @Model.TurmaID</h1>
        <p class="lead">
            <h3>
                @Model.Serie @Model.Nome &emsp; @Model.Turno
            </h3>
        </p>
    </div>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-40" src="http://cosmonerd.com.br/wp-content/uploads/2017/07/os-simpsons-fox-cosmonerd-post.jpg" style="" alt="primeiro">
        </div>
        @foreach (var item in Model._Matriculas)
        {
            <div class="carousel-item">
                <img class="d-block w-40" src="https://pm1.narvii.com/6406/ec0171f5225e56a1e91c0e7e80e28d60a2a06983_hq.jpg" alt="proximo">
                <p> @item._Aluno.AlunoID  </p>
                <p>  @item._Aluno.Nome  </p>
                <p>@item._Aluno.Situacao></p>
            </div>
        }
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<br />





