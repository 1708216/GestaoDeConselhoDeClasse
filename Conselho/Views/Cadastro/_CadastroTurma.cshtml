@model Conselho.Models.Turma
@{
    ViewBag.Title = "CadastrarTurma";
}
<br />
@using (Html.BeginForm("Create", "Turma"))
{

    <div class="form-group arrow">
        @Html.LabelFor(model => model.Serie, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-xs-40">
            @Html.EditorFor(model => model.Serie, "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-xs-40">
            @Html.EditorFor(model => model.Nome, "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Turno, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-xs-40">
            @Html.EditorFor(model => model.Turno, "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

}

