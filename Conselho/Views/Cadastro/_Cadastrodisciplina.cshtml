@model Conselho.Models.Disciplina
@{
    ViewBag.Title = "cadastro de Disciplina";
}
<br />
@using (Html.BeginForm("Create", "Disciplina"))
{

    <div class="form-group arrow">
        @Html.LabelFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-xs-40">
            @Html.EditorFor(model => model.Nome, "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group left">
        @Html.LabelFor(model => model.CargaHoraria, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-xs-40">
            @Html.EditorFor(model => model.CargaHoraria, "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

}

